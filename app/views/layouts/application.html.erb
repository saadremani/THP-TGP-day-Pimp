									<%= link_to "Connexion", new_session_path, class: 'btn btn-primary dropdown-item' %>
							</div>
						
						</li>
						<% end %>
						
						<li class="nav-item mr-5">
							<% if logged_in? then %>
								<%= link_to "Se dÃ©connecter", session_path(session.id), class: 'btn btn-danger', :method => 'delete' %>
							<% end %>
